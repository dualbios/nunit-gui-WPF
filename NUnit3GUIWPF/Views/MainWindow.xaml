<Window x:Class="NUnit3GUIWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:NUnit3GUIWPF.Converters"
        xmlns:local="clr-namespace:NUnit3GUIWPF"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Assets/Icons.xaml" />

                <ResourceDictionary Source="../Themes/MetroDark/MetroDark.MSControls.Core.Implicit.xaml" />
                <ResourceDictionary Source="../Themes/MetroDark/MetroDark.MSControls.Toolkit.Implicit.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:BoolToVisibilityConverter x:Key="ReversedBoolToVisibilityConverter"
                                                  IsReversed="True" />
        </ResourceDictionary>
    </Window.Resources>
    <Window.Background>
        <VisualBrush Opacity="0.1"
                     Viewport="0,0,250,330"
                     ViewportUnits="Absolute"
                     TileMode="Tile"
                     Stretch="Fill">
            <VisualBrush.Visual>
                <ContentControl Content="{StaticResource MainBackground}" />

            </VisualBrush.Visual>

        </VisualBrush>
    </Window.Background>

    <Grid>

        <Grid Visibility="{Binding IsProjectLoaded, Converter={StaticResource ReversedBoolToVisibilityConverter}}">
            <Grid Visibility="{Binding IsProjectLoading, Converter={StaticResource ReversedBoolToVisibilityConverter}}">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">
                    <DockPanel LastChildFill="True"
                               Margin="32">
                        <Button Content="..."
                                Width="32"
                                DockPanel.Dock="Right"
                                Margin="4 0"
                                Click="SelectFile_OnClick" />
                        <TextBox x:Name="FileNameTextBox"
                                 Text="{Binding FileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </DockPanel>
                    <Button Margin="16"
                            Command="{Binding OpenFileCommand}"
                            HorizontalAlignment="Center">
                        <Button.Content>
                            <StackPanel Orientation="Vertical">
                                <ContentControl Content="{StaticResource OpenIcon}"
                                                Width="64"
                                                Height="64"
                                                Foreground="DarkBlue" />
                                <Label Content="Open"
                                       HorizontalContentAlignment="Center" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding IsProjectLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="Loading project ..."
                           HorizontalAlignment="Center" />
                <Button Content="Cancel"
                        Command="{Binding CancelLoadingProjectCommand}" />
            </StackPanel>
        </Grid>
        <ContentControl Content="{Binding ProjectViewModel}"
                        Visibility="{Binding IsProjectLoaded, Converter={StaticResource BoolToVisibilityConverter}}" />

    </Grid>
</Window>